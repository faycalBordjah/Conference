<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Conference{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path("index") }}">CONFERENCE</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Conference</a>
                    </li>
                    {% if isAdmin %}
                        <li class="nav-item">
                            <a class="nav-link" href="#">Top Confereces</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('users') }}">Users</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('about') }}">About</a>
                    </li>
                </ul>
            </div>
            <a class="f" href="{{ path("logout_app") }}">Logout</a><br>
        </nav>
    {% endblock %}
</head>
<body>
<h1 align="center">
    Add New Conference
</h1>
<hr>
<div class="container">
    {{ form_start(newCoForm) }}<br>
    {{ form_row(newCoForm.title) }}<br>
    {{ form_row(newCoForm.content) }}<br>
    {{ form_row(newCoForm.date) }}<br>
    {{ form_row(newCoForm.place) }}<br>
    {{ form_row(newCoForm.create) }}
    {{ form_end(newCoForm) }}
</div>
</body>
</html>