{% extends 'base.html.twig' %}
{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
{% endblock %}
{% block title %}Conference{% endblock %}

{% block body %}

       <div style="text-align:center; margin-top:1.25rem;">
            <hr>
            <br>
            <h2>List of conferences</h2>
        </div>
    <hr>
    <div class="container-fluid">
        <table class="table">
            <thead>
            <tr class="table-primary">
                <th scope="row">Title</th>
                <th>Date de création</th>
                <th>Date prévu</th>
                <th>Détails</th>
            </tr>
            </thead>
            <tbody>
            {% for conference in conferences %}
                <tr>
                    <td>{{ conference.title }}</td>
                    <td>{{ conference.creationDate ? conference.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ conference.date ? conference.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td><a href="/get/{{ conference.id }}">Note</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No conferences</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <div class="row justify-content-md-center">
            <ul class="pagination">
                {% for i in 1..6 %}
                    <li class="page-item active">
                        <a class="page-link" href="{{ path('index', {page: i}) }}">{{ i }}</a>
                    </li>&nbsp;
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}